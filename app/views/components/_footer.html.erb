  <div class="footer-details">
    <div class="f-comp">
      <div class="f-comp-title">
        <%= t(:contact) %>
      </div>
      <a href="https://www.instagram.com/holybakerybucharest/" class="link">INSTAGRAM</a>
      <a href="https://www.facebook.com/HolyBakeryBucharest" class="link">FACEBOOK</a>
    </div>

    <div class="f-comp">
      <div class="f-comp-title">
        <%= t(:get_in_touch) %>
      </div>
      +1234567890
      <a href="mailto:example@example.com" class="link">example@example.com</a>
    </div>

    <div class="f-comp">
      <div class="f-comp-title"><%= t(:subscribe) %></div>
      <%= form_with url: subscriptions_create_path, method: :post, id: "newsletter-form", data: { turbo: "true" } do |form| %>
        <%= form.email_field :email, placeholder: t(:email_ph), required: true, class: 'form-input' %>
        <%= form.submit 'SUBSCRIBE', class: 'button', id: 'subscribe-button' %>
      <% end %>
    </div>




    <script>
      document.addEventListener('DOMContentLoaded', () => {
        // Get the form and button elements
        const form = document.getElementById('newsletter-form');
        const submitButton = document.getElementById('subscribe-button');

        if (form && submitButton) {
          // Handle AJAX form success
          form.addEventListener('ajax:success', (event) => {
            const [data, status, xhr] = event.detail;

            // Change button text to 'SUBSCRIBED'
            submitButton.textContent = 'SUBSCRIBED';
            submitButton.disabled = true; // Optionally disable the button

            // Optionally, display a success message or handle other UI updates
          });

          // Handle AJAX form error
          form.addEventListener('ajax:error', (event) => {
            const [data, status, xhr] = event.detail;

            console.error('Form submission failed:', data);

            // Optionally, display an error message or handle UI updates
          });
        }
      });


    </script>




    <div class="f-comp">
      <div class="f-comp-title">HOLY BAKERY</div>
        <%= link_to t(:about), about_path, class: "link" %>
        <%= link_to t(:terms), about_path, class: "link" %>
        <%= link_to t(:privacy), about_path, class: "link" %>
    </div>

    <div class="f-comp">
      <div class="f-comp-title">
        <%= t(:real_shop) %>
      </div>
        <%= link_to t(:shop), about_path, class: "link" %>
        <%= link_to t(:menu), about_path, class: "link" %>
    </div>

  </div>
