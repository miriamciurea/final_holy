<div class="register prod">

  <div class="register-content">

    <h2>NEW PRODUCT</h2>

    <%= form_with(model: product, local: true) do |form| %>
      <% if product.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

          <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.text_field :name, placeholder: "NAME" %>
      </div>

      <div class="field">
        <%= form.number_field :price, step: 0.01, placeholder: "PRICE" %>
      </div>

      <div class="field">
        <%= form.text_field :storage, placeholder: "STORAGE" %>
      </div>

      <div class="field">
        <%= form.text_field :serving, placeholder: "SERVING" %>
      </div>

      <div class="field">
        <%= form.label :category, "Select Categories" %>
        <% Product::CATEGORIES.each do |category| %>
          <div>
            <%= check_box_tag 'product[category][]', category, @product.category&.include?(category) %>
            <%= label_tag "product_category_#{category}", category %>
          </div>
        <% end %>
      </div>

      <div class="field">
        <%= form.label :part_of, "Part Of" %>
        <%= form.select :part_of, options_for_select(["shop", "menu"], @product.part_of), prompt: "Select Shop or Menu" %>
      </div>

      <div class="field">
        <%= form.label :ingredients, "Ingredients (comma-separated)" %>
        <%= form.text_field :ingredients, value: (@product.ingredients || []).join(", "), id: "ingredients-input" %>
      </div>

      <div class="field">
        <%= form.label :allergens, "Allergens (comma-separated)" %>
        <%= form.text_field :allergens, value: (@product.allergens || []).join(", "), id: "allergens-input" %>
      </div>

      <script>
        document.addEventListener("turbo:load", function() {
          document.querySelector("#ingredients-input").addEventListener("change", function() {
            this.value = this.value.split(",").map(item => item.trim()).join(", ");
          });

          document.querySelector("#allergens-input").addEventListener("change", function() {
            this.value = this.value.split(",").map(item => item.trim()).join(", ");
          });
        });
      </script>

      <div class="field">
        <%= form.label :photos %>
        <%= form.file_field :photos, multiple: true, direct_upload: true %>
      </div>

      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>

  </div>
</div>
