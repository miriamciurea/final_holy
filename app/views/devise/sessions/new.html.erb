<div class="register">

  <div class="register-content">

    <h2>LOG IN</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "YOUR EMAIL ADDRESS" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "CURRENT PASSWORD" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field custom-checkbox-container">
          <%= f.check_box :remember_me, id: 'remember_me', class: 'custom-checkbox' %>
          <label for="remember_me">
            <span class="checkmark"></span>
            Remember me
          </label>
        </div>
      <% end %>


      <div class="actions">
        <%= f.submit "LOG IN", class: "button" %>
      </div>

    <% end %>
    <%= render "devise/shared/links", class: "links" %>

  </div>

</div>
